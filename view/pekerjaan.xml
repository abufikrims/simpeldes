<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- tree view -->
        <record id="view_cdn_pekerjaan_tree" model="ir.ui.view">
            <field name="name">cdn_pekerjaan_tree</field>
            <field name="model">cdn.pekerjaan</field>
            <field name="type">tree</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Pekerjaan">
                    <field name="name" />
                    <field name="keterangan" />
                    <field name="active" />
                </tree>
            </field>
        </record>
        <!-- form view -->
        <record id="view_cdn_pekerjaan_form" model="ir.ui.view">
            <field name="name">cdn_pekerjaan_form</field>
            <field name="model">cdn.pekerjaan</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Pekerjaan">
                    <header>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <!--button type="object" name="action_view_detail" class="oe_stat_button" icon="fa-pencil-square-o"-->
                                <!--field name="detail_count" widget="statinfo" string="Detail(s)"/-->
                                <!--field name="detail_ids" invisible="1"/-->
                            <!--/button-->
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Pekerjaan Name"/>
                            <h1><field name="name"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="keterangan" />
                                <field name="active" />
                            </group>
                            <group>
                            </group>
                        </group>
                        <notebook>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- search -->
        <record id="view_cdn_pekerjaan_search" model="ir.ui.view">
            <field name="name">cdn_pekerjaan</field>
            <field name="model">cdn.pekerjaan</field>
            <field name="arch" type="xml">
                <search string="Pekerjaan">

                    <filter string="Name" name="filter_by_name" domain="[('name','=','')]" />
                    <filter string="Keterangan" name="filter_by_keterangan" domain="[('keterangan','=','')]" />
                    <filter string="active" name="filter_by_active" domain="[('active','=','')]" />
                    <field name="name" select="True"/>
                    <field name="keterangan" select="True"/>
                    <field name="active" select="True"/>
                    <group string="Group By..">
                    </group>
                </search>
            </field>
        </record>
        <!-- kanban , to show image, please add image_small in the model -->
        <record id="view_cdn_pekerjaan_kanban" model="ir.ui.view" >
            <field name="name">cdn_pekerjaan</field>
            <field name="model">cdn.pekerjaan</field>
            <field name="arch" type="xml">
                <kanban version="7.0">
                    <field name="id" />
                    <field name="name" />
                    <field name="keterangan" />
                    <field name="active" />
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_kanban_record_has_image_fill">
                                <div class="oe_kanban_details">
                                    <h4>
                                        <a type="open"><field name="name"/></a>
                                    </h4>
                                    <ul>
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <!-- calendar if a date field exists -->
        <!-- graph -->
        <record id="view_cdn_pekerjaan_graph" model="ir.ui.view">
            <field name="name">cdn_pekerjaan</field>
            <field name="model">cdn.pekerjaan</field>
            <field name="arch" type="xml">
                <graph string="Pekerjaan" type="bar">
                </graph>
            </field>
        </record>
        <!-- action window -->
        <record id="action_cdn_pekerjaan" model="ir.actions.act_window">
            <field name="name">Pekerjaan</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">cdn.pekerjaan</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="context">{"search_default_fieldname":1}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                Click to add a new Pekerjaan
                </p><p>
                Click the Create button to add a new Pekerjaan
                </p>
            </field>
        </record>

        <menuitem id="menu_cdn_pekerjaan" name="Pekerjaan" parent="simpeldes_config_menu" action="action_cdn_pekerjaan" sequence="40"/>
    </data>
</odoo>